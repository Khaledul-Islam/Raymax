@model IEnumerable<Raymax.Models.Invoice>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Invoice History</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fa fa-plus"></i> &nbsp; New Invoice</a>
    </div>
</div>

<br />
<br />

<table id="tblData" class="table table-striped table-bordered col-md" style="width:100%">
    <thead>
        <tr>
            <th>Invoice Number</th>
            <th>Customer Name</th>
            <th>Mobile Number</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
</table>


@section scripts
{
    <script src="~/js/Index.js"></script>
}

