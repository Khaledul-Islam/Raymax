@model Raymax.Models.Invoice

@{
    ViewData["Title"] = "Create";
}

<body>
    <div class="container container-invoice">
        <form asp-action="Create" id="invoice-form" method="post" class="invoice-form" role="form" novalidate="">
            <div class="load-animate animated fadeInUp">
                <div class="row">
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 text-center">
                        @*<h1>Raymax Invoice Management System</h1>*@
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                        <div class="form-group">
                            <input asp-for="CustomerName" class="form-control" id="companyName" placeholder="Customer Name">

                        </div>
                        <div class="form-group">
                            <input asp-for="Contact" class="form-control" id="companyName" placeholder="Mobile Number">
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 pull-right">
                        <div class="form-group">
                            <input asp-for="Address" class="form-control" rows="3" id="address" placeholder="Customer Address">
                        </div>
                        <div class="form-group">
                            <input asp-for="Date_Created" class="form-control">
                        </div>


                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <table class="table table-bordered table-hover" id="invoiceItem">
                            <tr>
                                <th width="2%"><input id="checkAll" class="formcontrol" type="checkbox"></th>
                                <th width="15%">Product No</th>
                                <th width="38%">Description</th>
                                <th width="15%">Quantity</th>
                                <th width="15%">Unit Price</th>
                                <th width="15%">Total Price</th>
                            </tr>
                            <tr>
                                <td><input class="itemRow" type="checkbox"></td>
                                <td><input asp-for="Products[0].ProductID" id="productCode_1" class="form-control"></td>
                                <td><input asp-for="Products[0].Description" id="productName_1" class="form-control"></td>
                                <td><input asp-for="Products[0].Quantity"  id="quantity_1" class="form-control quantity"></td>
                                <td><input asp-for="Products[0].UnitPrice" id="price_1" class="form-control"></td>
                                <td><input asp-for="Products[0].TotalPrice" id="total_1" class="form-control total"></td>
                                
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                        <button class="btn btn-danger delete" id="removeRows" type="button"><i class="fa fa-trash" aria-hidden="true"></i></button>
                        <button class="btn btn-success" id="addRows" type="button"><i class="fa fa-plus" aria-hidden="true"></i></button>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-xs-12 col-sm-8 col-md-7 col-lg-7">
                        <div class="form-group">
                            <input type="submit" data-loading-text="Saving Invoice..." name="invoice_btn" value="Create Invoice" class="btn btn-success submit_btn invoice-save-btm">
                            <a class="btn btn-success submit_btn invoice-save-btm" asp-action="Index">Back to List</a>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    <label asp-for="Subtotal" class="col-form-label"></label>
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="Subtotal" value="" class="form-control " name="subTotal" id="subTotal">
                                </div>
                            </div>
                        </div>
                        @*<div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    <label asp-for="TaxRate" class="col-form-label"></label>
                                </div>
                                <div class="col-md-6">*@
                                    <input hidden asp-for="TaxRate" value="0" class="form-control" name="taxRate" id="taxRate">
                                @*</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    <label asp-for="TaxAmount" class="col-form-label"></label>
                                </div>
                                <div class="col-md-6">*@
                                    <input hidden asp-for="TaxAmount" value="0" class="form-control" name="taxAmount" id="taxAmount">
                                @*</div>
                            </div>
                        </div>*@

                        @*<div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    <label asp-for="GrandTotal" class="col-form-label"></label>
                                </div>
                                <div class="col-md-6">*@
                                    <input hidden asp-for="GrandTotal" value="" class="form-control" id="totalAftertax">
                                @*</div>
                            </div>
                        </div>*@

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    <label asp-for="Amount_Paid" class="col-form-label"></label>
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="Amount_Paid" value="" class="form-control" id="amountPaid">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    <label asp-for="Amount_Due" class="col-form-label"></label>
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="Amount_Due" value="" class="form-control" id="amountDue">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </form>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
